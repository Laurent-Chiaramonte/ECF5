@model IEnumerable<MaintInfoBo.CentreInformatique>

<h3>Liste des centres informatiques du client : @ViewBag.leClient</h3>
<p>
    @Ajax.ActionLink("Créer nouveau centre informatique", "CreerCentreduClient",
        new { id = ViewBag.clientID },
        new AjaxOptions { UpdateTargetId = "affct2", InsertionMode = InsertionMode.Replace })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("Code postal")
        </th>
        <th>
            @Html.DisplayName("Ville")
        </th>
        <th>
            @Html.DisplayName("Téléphone")
        </th>
        <th>
            @Html.DisplayName("Client")
        </th>
        <th>
            @Html.DisplayName("Secteur")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.adresse_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cp_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ville_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.leClient.nom_client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.leSecteur.libelleSecteur)
        </td>
        <td>
            @Ajax.ActionLink("Afficher le contrat", "ContratDuClient",
                new { id = item.centreInformatiqueID },
                new AjaxOptions { UpdateTargetId = "affct2", InsertionMode = InsertionMode.Replace })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Annuler", "Index")
</div>
<div id="affct2"></div>