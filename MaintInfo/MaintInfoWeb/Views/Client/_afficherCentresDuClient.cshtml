@model IEnumerable<MaintInfoBo.CentreInformatique>

<h3>Liste des centres informatiques du client : </h3>
<p>
    @Html.ActionLink("Créer nouveau centre informatique", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Adresse")
        </th>
        <th>
            @Html.DisplayName("Code postal")
        </th>
        <th>
            @Html.DisplayName("Ville")
        </th>
        <th>
            @Html.DisplayName("Téléphone")
        </th>
        <th>
            @Html.DisplayName("ClientID")
        </th>
        <th>
            @Html.DisplayName("SecteurID")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.adresse_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cp_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ville_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_centre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clientID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.secteurID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.centreInformatiqueID }) |
            @Html.ActionLink("Details", "Details", new { id=item.centreInformatiqueID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.centreInformatiqueID })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Annuler", "Index")
</div>
