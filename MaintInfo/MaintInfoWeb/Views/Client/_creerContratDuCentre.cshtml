@model MaintInfoBo.Contrat


@using (Html.BeginForm("CreerContratDuCentre", "Client")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Créer contrat du centre informatique : @ViewBag.AdresseCentreInfo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Montant :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.montant_contrat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.montant_contrat, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Commentaire :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.commentaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.commentaire, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="display: none">
            @Html.LabelFor(model => model.leCentre.centreInformatiqueID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.leCentre.centreInformatiqueID, (SelectList)ViewBag.LesCentres,
                    String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.leCentre.centreInformatiqueID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
